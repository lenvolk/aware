{
  "name": "aware",
  "displayName": "Aware",
  "description": "AI-powered awareness manager that tracks your M365 meetings and helps you stay focused",
  "version": "0.0.1",
  "publisher": "burkeholland",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/burkeholland/aware"
  },
  "homepage": "https://github.com/burkeholland/aware#readme",
  "bugs": {
    "url": "https://github.com/burkeholland/aware/issues"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "aware",
    "meetings",
    "calendar",
    "microsoft 365",
    "copilot",
    "productivity"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aware.showMeetings",
        "title": "Aware: Show Upcoming Meetings",
        "icon": "$(calendar)"
      },
      {
        "command": "aware.refreshMeetings",
        "title": "Aware: Refresh Meetings",
        "icon": "$(refresh)"
      },
      {
        "command": "aware.joinMeeting",
        "title": "Aware: Join Meeting",
        "icon": "$(call-outgoing)"
      },
      {
        "command": "aware.refreshDocuments",
        "title": "Aware: Refresh Related Documents",
        "icon": "$(refresh)"
      },
      {
        "command": "aware.openSettings",
        "title": "Aware: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "aware.selectModel",
        "title": "Aware: Select Language Model",
        "icon": "$(copilot)"
      },
      {
        "command": "aware.configureWorkIQ",
        "title": "Aware: Add Work IQ MCP Server",
        "icon": "$(server)"
      }
    ],
    "configuration": {
      "title": "Aware",
      "properties": {
        "aware.meetingReminderMinutes": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 60,
          "description": "Minutes before a meeting to show a reminder notification"
        },
        "aware.refreshIntervalMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "How often to refresh the meeting list (in minutes). Lower values provide more up-to-date information but may use more premium model requests if a premium model is selected."
        },
        "aware.preferredModel": {
          "type": "string",
          "default": "",
          "description": "Preferred language model for the Aware assistant. Leave empty to use the default model. Use the 'Aware: Select Model' command to see available models."
        },

        "aware.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Aware status in the status bar"
        },
        "aware.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable meeting reminder notifications"
        },
        "aware.workingHoursStart": {
          "type": "string",
          "default": "09:00",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Start of working hours (HH:MM format)"
        },
        "aware.workingHoursEnd": {
          "type": "string",
          "default": "17:00",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "End of working hours (HH:MM format)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aware",
          "title": "Aware",
          "icon": "$(clock)"
        }
      ]
    },
    "views": {
      "aware": [
        {
          "id": "aware.meetings",
          "name": "Upcoming Meetings"
        },
        {
          "id": "aware.relatedDocuments",
          "name": "Related Documents"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aware.selectModel",
          "when": "view == aware.meetings",
          "group": "navigation@1"
        },
        {
          "command": "aware.refreshMeetings",
          "when": "view == aware.meetings",
          "group": "navigation@2"
        },
        {
          "command": "aware.refreshDocuments",
          "when": "view == aware.relatedDocuments",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aware.joinMeeting",
          "when": "view == aware.meetings && viewItem == meetingWithLink",
          "group": "inline"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "aware.assistant",
        "name": "aware",
        "fullName": "Aware Assistant",
        "description": "Helps you stay aware of your meetings and schedule",
        "isSticky": false,
        "commands": [
          {
            "name": "meetings",
            "description": "Show your upcoming meetings"
          },
          {
            "name": "next",
            "description": "When is your next meeting?"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "aware_getMeetings",
        "displayName": "Get Meetings",
        "toolReferenceName": "getMeetings",
        "description": "Get the user's upcoming meetings from their M365 calendar",
        "modelDescription": "Retrieves the user's upcoming meetings from their Microsoft 365 calendar. Use this when the user asks about their schedule, meetings, or calendar.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "timeRange": {
              "type": "string",
              "description": "Time range to fetch meetings for: 'today', 'tomorrow', 'week'",
              "enum": ["today", "tomorrow", "week"]
            }
          }
        }
      },
      {
        "name": "aware_getNextMeeting",
        "displayName": "Get Next Meeting",
        "toolReferenceName": "getNextMeeting",
        "description": "Get the user's next upcoming meeting",
        "modelDescription": "Gets the user's next upcoming meeting from their calendar. Use this when the user asks about their next meeting or when they need to know how much time they have before their next meeting.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
